{
    "id": "org.kde.skanpage",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "skanpage",
    "rename-icon": "skanpage",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all"
    ],
    "separate-locales": false,
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/man"
    ],
    "modules": [
        {
            "name": "libusb1",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libusb/libusb/releases/download/v1.0.25/libusb-1.0.25.tar.bz2",
                    "sha256": "8a28ef197a797ebac2702f095e81975e2b02b2eeff2774fa909c78a74ef50849"
                }
            ]
        },
        {
            "name": "sane",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-usb",
                "--with-v4l",
                "--with-gphoto2",
                "--enable-pthread",
                "--enable-pnm-backend",
                "--enable-pthread"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/sane-project/backends",
                    "tag": "1.1.1"
                }
            ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/kde/libksane.git"
                }
            ]
        },
        {
            "name": "skanpage",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/skanpage/1.0.0/skanpage-1.0.0.tar.xz",
                    "sha256": "90f5401bae283e4285df3b4707857b336c5cd4072fc221e762930c2cc40d6060"
                },
                {
                    "type": "patch",
                    "path": "add-oars-rating.patch"
                }
            ]
        }
    ]
}
